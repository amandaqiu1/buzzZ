<h3>Categories</h3>
<div class="center" class="row">
  <div class="col-4">
    <div class="list-group" id="list-tab" role="tablist">
      {{#each categories}}
        <a class="list-group-item list-group-item-action" id="list-{{category}}-list" data-toggle="list" href="/categories/expenses?category={{category}}" role="tab" aria-controls={{category}}>{{category}}</a>
      {{/each}}
    </div>
  </div>
  <div class="col-8">
    <div class="tab-content" id="nav-tabContent">
      {{#each categories}}
        <div class="tab-pane fade" id="list-{{category}}" role="tabpanel" aria-labelledby="list-{{category}}-list">...</div>
      {{/each}}
    </div>
  </div>
</div>

<h3><a class="btn btn-outline-secondary" href="/categories/create" role="button">Add Category</a>
<a class="btn btn-outline-secondary" href="/categories/remove" role="button">Remove Category</a></h3>
